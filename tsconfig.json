{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "es2015", 
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "rootDir": "src",
    "inlineSources": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
